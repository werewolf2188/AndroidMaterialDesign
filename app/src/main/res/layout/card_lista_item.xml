<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="300dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/ivImagen"
            android:src="@drawable/paisaje_agua" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cenote Kalakmul"
            android:background="#49E6E6E6"
            android:textSize="24dp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:id="@+id/tvNombre"
            android:textStyle="bold"
            android:layout_alignBottom="@id/ivImagen"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivImagen"
            android:orientation="vertical"
            android:id="@+id/llTexto"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titulo"
                android:textStyle="bold"
                android:id="@+id/tvTitulo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtitulo"
                android:textStyle="bold"
                android:id="@+id/tvSubtitulo" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/llTexto" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llBotones"
            android:layout_alignParentBottom="true">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHARE"
                android:background="@null"
                android:id="@+id/btShare" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LEARN MORE"
                android:layout_marginLeft="5dp"
                android:textColor="@color/PrimaryColor"
                android:background="@null"
                android:id="@+id/btLearnMore" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
